<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.app.ecommerce.ui.main.fragments.DashBoardFragment"
        android:label="DashboardFragment">
        <action
            android:id="@+id/action_dashboardFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.app.ecommerce.ui.main.fragments.ProductDetailFragment"
        android:label="ProductDetailFragment">
        <argument
            android:name="product_id"
            app:argType="string" />
        <argument
            android:name="product_image"
            app:argType="string" />
        <argument
            android:name="product_title"
            app:argType="string" />
        <argument
            android:name="product_price"
            app:argType="float" />
        <argument
            android:name="product_category"
            app:argType="string" />
        <argument
            android:name="product_des"
            app:argType="string" />
    </fragment>

</navigation>
